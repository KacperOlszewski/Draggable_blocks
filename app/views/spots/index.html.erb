<div id="grid">
  
  <% @spots.each do |s| %>
    <div  class="spot" 
        id='spot<%= s.id  %>' 
        x-position="<%= s.position_x %>" 
        y-position="<%= s.position_y %>">

      <%= form_for(s, :html => { class: 'update' }) do |f| %>
          <%= f.hidden_field :position_x, id: "pos_x" %>
          <%= f.hidden_field :position_y, id: "pos_y" %>
      <% end %>

      <%= form_for(s, :html => { :method => :delete, :remote => true, class: 'destroy' }) do |f| %>
        <%= f.submit %>
      <% end %>
    </div>
  <% end %>
  
</div>
